<div style="background-color: rgb(255, 255, 255); margin: 80px auto; width: 900px; height: 550px;
     box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); display: flex; flex-direction: row; border-radius: 15px; overflow: hidden;">
    <div style="flex: 50%;">
        <img style="width: 100%; height: 100%; object-fit: cover;"
            src="https://64.media.tumblr.com/967c94f6202a5fe5032e4165bbfeeff7/f7b876c187bd4b05-4d/s1280x1920/c6847ff06bd952afd3d7eb95a0cae182ae43c62f.jpg">
    </div>
    <div style="flex: 50%; background-color: rgb(147, 147, 147); display: flex; align-items: center; justify-content: center;">
        <form method="post" style="background: #fff; padding: 20px; border-radius: 0 15px 15px 0; width: 100%; height: 100%;
         display: flex; flex-direction: column; justify-content: center;padding: 30px;">
            <h1 style="margin-bottom: 10px; text-align: center; color: #333;">Đăng ký</h1>
            <div style="margin-bottom: 10px;">
                <label for="username" style="display: block; margin-bottom: 5px; color: #555;">Tên tài khoản</label>
                <input type="text" id="username" name="username" style="width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #ddd;">
            </div>
            
            <div style="display: flex; gap: 10px; margin-bottom: 10px;">
                <div style="flex: 1;">
                    <label for="password" style="display: block; margin-bottom: 5px; color: #555;">Mật khẩu</label>
                    <input type="password" id="password" name="password" style="width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #ddd;">
                </div>
                <div style="flex: 1;">
                    <label for="confirm-password" style="display: block; margin-bottom: 5px; color: #555;">Xác nhận mật khẩu</label>
                    <input type="password" id="confirm-password" name="confirm-password" style="width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #ddd;">
                </div>
            </div>
            <div style="margin-bottom: 10px;">
                <label for="fullname" style="display: block; margin-bottom: 5px; color: #555;">Họ và tên</label>
                <input type="text" id="fullname" name="fullname" style="width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #ddd;">
            </div>
            <div style="margin-bottom: 10px;">
                <label for="email" style="display: block; margin-bottom: 5px; color: #555;">Email</label>
                <input type="email" id="email" name="email" style="width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #ddd;">
            </div>
            <button type="submit" class="button-27" style="margin-top: 15px;">Đăng ký</button>
            <p style="margin-top: 15px; text-align: center; color: #555; font-size: 13px;">
                Đã có tài khoản? <a href="/account/login" style="color: #0000EE; text-decoration: none; font-size: 13px;">Đăng nhập ngay</a>
            </p>
        </form>
    </div>
</div>