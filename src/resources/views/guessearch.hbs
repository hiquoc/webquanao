<div class="flex-container"
    style="display: flex;flex-direction: row;font-size: 30px;gap:30px;text-align: center;padding: 20px 50px 0 50px; ">
    <div class="flex-item-left" style="padding: 10px; flex: 70%;">
        <div style="display: flex;align-items: center;justify-content:space-between">
            <h2
                style="text-align: left; font-weight: 600; font-family: 'Roboto Condensed', sans-serif, Arial, sans-serif; color: #333;">
                Kết quả tìm kiếm: <img src="/img.jpg" id="saveimg" alt="..."
                    style="border-bottom: #d6d5d5 1px solid; height: 100px">
                {{text}}
            </h2>


            <div style="display: flex; align-items: center;margin-right:6px;margin-bottom:6px">
                <form class="dropdown" id="sortForm" method="GET" action="http://localhost:8080/search">
                    <button id="sortDropdown"
                        style="background-color: #ffffff; border: 1px solid #000000; border-radius: px; color: #151515; padding: 10px; font-family: 'Arial', sans-serif; font-size: 16px; font-weight: bold; cursor: pointer; width: 100%;"
                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Sắp xếp
                    </button>
                    <input type="hidden" name="sort" id="sortValue" value="">
                    <input type="hidden" name="text" id="textValue" value="">
                    <ul class="dropdown-menu" name="sort"
                        style="position: absolute; left: 50%; transform: translate(-50%, 0); text-align: center; margin-top: 5px; padding: 0; border-radius: 5px; background-color: #ffffff; border: 1px solid #ddd; z-index: 1000; width: auto;">
                        <li style="list-style: none;">
                            <button class="dropdown-item" value="thap-den-cao"
                                style="padding: 10px 15px; display: block; text-decoration: none; color: #333;">
                                Thấp đến cao
                            </button>
                        </li>
                        <li style="list-style: none;">
                            <button class="dropdown-item" value="cao-den-thap"
                                style="padding: 10px 15px; display: block; text-decoration: none; color: #333;">
                                Cao đến thấp
                            </button>
                        </li>
                        <li style="list-style: none;">
                            <button class="dropdown-item" value="moi-nhap"
                                style="padding: 10px 15px; display: block; text-decoration: none; color: #333;">
                                Mới nhất
                            </button>
                        </li>
                        <li style="list-style: none;">
                            <button class="dropdown-item" value="mua-nhieu"
                                style="padding: 10px 15px; display: block; text-decoration: none; color: #333;">
                                Mua nhiều nhất
                            </button>
                        </li>
                    </ul>
                </form>
            </div>

        </div>
        <div id="xacnhan" style="display: flex; align-items:center">
            <p style="display: block; text-align:left">Kết quả tìm kiếm có chính xác?</p>
            <p id="co" style="margin-left: 10px; color: rgb(54, 54, 249); text-decoration: underline;cursor:pointer">Có
            </p>
            <p id="khong" style="margin-left: 10px; color: rgb(54, 54, 249); text-decoration: underline;cursor:pointer">
                Không</p>
        </div>
        <form id="imgform" action="save" method="POST">
            <input type="hidden" name="img" id="img" value="">
            <input type="hidden" name="type" id="type" value="{{text}}">
        </form>
        {{#if none }}
        <p style="text-align: left;margin-top:0px; font-size: 20px">{{none}}!</p>
        {{/if}}
        <div>
            <div class="grid-container-2" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px;">
                {{#each products}}
                <a class="grid-item" href="/product/{{this.product_id}}">
                    <div class="card" style="width: auto; position: relative;">
                        <img src="{{this.mainImage}}" class="card-img-top" alt="..."
                            style="border-bottom:#d6d5d5 1px solid" data-original-src="{{this.mainImage}}">
                        <i class="bi bi-cart4 cart-icon" style="display: none;"></i>
                        <div style="margin-top:10px">
                            {{#each this.otherImages}}
                            <img src="{{this}}" style="border:#f1f0f0 1px solid" class="small-img">
                            {{/each}}
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{this.name}}</p>
                            <p class="card-text" style="color:red">{{formatPrice this.price}}₫</p>
                        </div>
                    </div>
                </a>
                {{/each}}

            </div>
        </div>


    </div>
    <div class="flex-item-left" style="padding: 15px; flex: 30%;  border: 1px solid #ddd;
     border-radius: 5px; margin-top: 12px; position: sticky; top: 117px; height:fit-content">
        <div>
            <h2
                style="text-align: left; font-size: 20px; color: #000000;font-family: 'Roboto Condensed', sans-serif, Arial, sans-serif; ">
                Sản phẩm hot</h2>
            <span style="display: block; border-bottom: 2px solid rgb(0, 0, 0); margin-top: 5px;"></span>
        </div>
        <div>

            {{#each hot}}
            <a href="/product/{{this.product_id}}" style="text-decoration: none; color: inherit;">
                <div class="card mb-3"
                    style="max-width: 540px; height: 100px; margin-top: 20px; overflow: hidden; border: none; background-color: transparent;">
                    <div class="row g-0 h-100">
                        <div class="col-md-4 d-flex justify-content-center align-items-center">
                            <img src="{{this.mainImage}}" class="img-fluid" alt="Image"
                                style="height: 100px; width: 70px; object-fit: fill; border-radius: 0; border: 2px solid #d0d0d0;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body text-start"
                                style="padding: 5px; height: 100px; display: flex; flex-direction: column; justify-content: flex-start;">
                                <h5 class="card-title"
                                    style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0; text-align: left; font-size: 14px;">
                                    {{this.name}}
                                </h5>
                                <p class="card-text" style="margin-top: 10px; text-align: left; font-size: 12px;">
                                    <span style="color: red;">{{formatPrice this.price}}₫</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            {{/each}}

        </div>
    </div>

</div>

<script>
    function changeSort(selected) {
        document.getElementById('sortDropdown').textContent = `Sắp xếp: ${selected}`;
    }
</script>
<script>
    document.querySelectorAll('.dropdown-item').forEach(item => {
        item.addEventListener('click', function () {
            const sortValue = this.value;
            document.getElementById('sortValue').value = sortValue;

            // Get the 'text' query parameter from the current URL
            const urlParams = new URLSearchParams(window.location.search);
            const textValue = urlParams.get('text') || '';

            // Set the 'text' hidden input field value to preserve 'text' parameter
            document.getElementById('textValue').value = textValue;

            // Submit the form to send both 'text' and 'sort' parameters
            document.getElementById('sortForm').submit();
        });
    });
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Select all card elements
        const cards = document.querySelectorAll('.card');

        cards.forEach(card => {
            const mainImage = card.querySelector('.card-img-top'); // Select the main image for this card
            const smallImages = card.querySelectorAll('.small-img'); // Select small images for this card
            const cartIcon = card.querySelector('.cart-icon'); // Select the cart icon for this card

            // Change the main image when hovering over small images
            smallImages.forEach(image => {
                image.addEventListener('mouseover', function () {
                    mainImage.src = this.src; // Change the main image to the hovered small image
                });

                image.addEventListener('mouseleave', function () {
                    mainImage.src = mainImage.getAttribute('data-original-src'); // Reset to the original image from data attribute
                });
            });
        });
    });

</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("co").addEventListener("click", function () {
            const imgSrc = document.getElementById("saveimg").src;

            document.getElementById("img").value = imgSrc;
            document.getElementById("type").value = document.getElementById("type").value.replace(/ /g, "_");

            const formData = new FormData(document.getElementById("imgform"));

            fetch("/guess/save", {
                method: "POST",
                body: formData,
            })
                .then(response => response.json())
                .then(data => {
                    document.getElementById("xacnhan").style.display = "none";
                    alert("Cảm ơn bạn đã xác nhận!")
                    console.log("Form submit thành công:", data);
                })
                .catch(error => {
                    console.error("Lỗi khi submit form:", error);
                });
        });
    })
    document.getElementById("khong").addEventListener("click",function(){
        document.getElementById("xacnhan").style.display = "none";
        alert("Cảm ơn bạn đã xác nhận!")
    })
</script>