<script>
    function previewImages() {
        const files = document.getElementById('product-images').files;
        const largeImage = document.getElementById('large-image');
        const smallImagesContainer = document.getElementById('small-images');
        const imgPreview = document.getElementById('image-preview');
        imgPreview.style.display="block";
        // Clear small images container
        smallImagesContainer.innerHTML = '';

        // Iterate through uploaded files
        Array.from(files).forEach((file, index) => {
            const reader = new FileReader();

            reader.onload = function (e) {
                if (index === 0) {
                    // Set the first image as the large image
                    largeImage.src = e.target.result;
                    largeImage.setAttribute('data-original-src', e.target.result);
                } else {
                    // Create small thumbnail images for others
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.classList.add('small-img');
                    img.style.height = '60px';
                    img.style.marginRight = '5px';
                    smallImagesContainer.appendChild(img);
                }
                if (index === files.length - 1) {
                    changeImg();
                }
            }
            reader.readAsDataURL(file);
        });
        
    }
</script>

<script>
    function changeImg() {
            const mainImage = document.querySelector('.card-img-top'); // Select the main image for this card
            const smallImages = document.querySelectorAll('.small-img'); // Select small images for this card
            
            console.log(smallImages)
            // Change the main image when hovering over small images
            smallImages.forEach(image => {
                image.addEventListener('mouseover', function () {
                    mainImage.src = this.src; // Change the main image to the hovered small image
                });

                image.addEventListener('mouseleave', function () {
                    mainImage.src = mainImage.getAttribute('data-original-src'); // Reset to the original image from data attribute
                });
            

    
        });
    };

</script>